.navbar
  %a!href=@WikiR.wp@ View
  %a!href=@?editMe@ Edit
  %a!href=@?deleteMe@ Delete
  History
$if (not isTop)
  %a!href=@?topView@ Top

%hr

%table
  %tr
    %th!rowspan=2 updated date
    %th editor
    %th changes
    %th operation
  %tr
    %th!colspan=3 comment
  $forall hs h
    %tr
      %td!rowspan=2 $show.wikiHistoryUpdated.snd.h$
      %td $userIdent.fst.h$
      %td +10,-0 line(s)
      %td
         [
         %a!href=@?viewVer.wikiHistoryVersion.snd.h@ View
         |
         %a!href=@?editVer.wikiHistoryVersion.snd.h@ Edit
         this version|
         %a!href=@?revertVer.wikiHistoryVersion.snd.h@ Revert
         ]
    %tr
      %td!colspan=3
        $maybe wikiHistoryComment.snd.h com
          $if (isNull com)
            %span.description *** No Comment ***
          $else
            %span $com$
        $nothing
          %span.description *** No Comment ***
