.login-options
    %form!method=post!action=@AuthR.loginR@
      %table.nostyle
        %tr
          %th Account ID:
          %td
            %input.watermark!type=account!name=account!placeholder=account
        %tr
          %th Password:
          %td
            %input.watermark!type=password!name=password!placeholder=password
        %tr
          %td!colspan=2
            %input!type=submit!value="Login via account"
    %h3 &mdash; OR &mdash;
    %form.button.google!method=get!action=@AuthR.forwardUrl@
        %input!type=hidden!name=openid_identifier!value="https://www.google.com/accounts/o8/id"
        %input!type=image!src=@StaticR.img_google_gif@!value="Login via Google"
    %form.button.yahoo!method=get!action=@AuthR.forwardUrl@
        %input!type=hidden!name=openid_identifier!value="http://me.yahoo.com"
        %input!type=image!src=@StaticR.img_yahoo_gif@!value="Login via Yahoo!"
    %a.button.facebook!href=@AuthR.facebookUrl@
        %img!src=@StaticR.img_facebook_gif@!value="Login via Facebook"
    %h3 &mdash; OR &mdash;
    %form!method=get!action=@AuthR.forwardUrl@
        %input#openid_identifier!type=text!name=openid_identifier!value="http://"
        %input#openid_submit!type=submit!value="Login via OpenID"
